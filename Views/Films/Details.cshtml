@model RetroVHSRental.Models.Film
@{
    ViewData["Title"] = "Film Details";
}

<h1>@Model.Title</h1>

<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Release Year:</strong> @Model.Release_year</p>
<p><strong>Rental Duration:</strong> @Model.Rental_duration days</p>
<p><strong>Rental Rate:</strong> @Model.Rental_rate €</p>

<a asp-controller="Rental" asp-action="Create" asp-route-id="@Model.FilmId" class="btn btn-info btn-sm">Rent</a>

<a asp-action="Index" class="btn btn-secondary">Back to list</a>