<form method="get" asp-action="Index" class="d-flex">
    <div class="form-group flex-grow-1 me-2">
        <input type="text" name="searchString"
               value="@Context.Request.Query["searchString"]"
               class="form-control me-2"
        placeholder="Search by title or actor"/>
    </div>
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>


<p>
    Sort by:
    <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParm"]">Title</a> |
    <a asp-action="Index" asp-route-sortOrder="@ViewData["YearSortParm"]">Release Year</a>
</p>

@* Loopar igenom alla categories och skapar knappar för dem. *@
<div class="mb-3">
    @foreach (var category in ViewBag.Categories as IEnumerable<RetroVHSRental.Models.Category>)
    {
        <a asp-action="Index" asp-route-categoryId="@category.CategoryId"
           class="btn btn-primary mt-2">
            @category.Name
        </a>
    }
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genres</th>
            <th>Actors</th>
            <th>Description</th>
            <th>Release Year</th>
            <th>Rental Duration</th>
            <th>Rental Rate</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var film in Model)
        {
            <tr>
                <td>@film.Title</td>
                <td> @string.Join(", ", film.FilmCategories.Select(fc => fc.Category.Name))</td>
                <td>@string.Join(", ", film.FilmActors.Select(fa => fa.Actor.FirstName + " " + fa.Actor.LastName))</td>
                <td>@film.Description</td>
                <td>@film.Release_year</td>
                <td>@film.Rental_duration days</td>
                <td>@film.Rental_rate €</td>
                <td>
                    <a asp-action="Details" asp-route-id="@film.FilmId" class="btn btn-primary">Details</a>
                </td>
                <td>
                    <a asp-controller="Rental" asp-action="Create" asp-route-id="@film.FilmId" class="btn btn-primary">Rent</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>Visar sida @ViewBag.CurrentPage av @ViewBag.TotalPages</p>
<nav aria-label="Pagination">
    <ul class="pagination justify-content-center">

        <!--Föregående-->
        <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">Föregående</a>

        <!--Aktuell-->
        <li class="page-item @(ViewBag.CurrentPage == 1 ? "active" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="1">1</a>
        </li>

        <!--Ellips -->
        @if (ViewBag.CurrentPage > 4)
        {
            <li class="page-item disabled"><span class="page-link">...</span></li>
        }

        <!-- Mittblock runt aktuell sida -->
        @for (int i = Math.Max(2, (int)ViewBag.CurrentPage - 2); i <= Math.Min((int)ViewBag.TotalPages - 1, (int)ViewBag.CurrentPage + 2); i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
            </li>
        }

        <!-- Ellips om vi är långt ifrån slutet-->
        @if (ViewBag.CurrentPage < ViewBag.TotalPages - 3)
        {
            <li class="page-item disabled"><span class="page-link">...</span></li>
        }

        <!--Sista sidan-->
        @if (ViewBag.TotalPages > 1)
        {
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@ViewBag.TotalPages">@ViewBag.TotalPages</a>
            </li>
        }
        <!--Nästa-->
        <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">Nästa</a>
    </ul>
</nav>
