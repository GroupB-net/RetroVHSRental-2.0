
@{
    ViewData["Title"] = "Home Page";
}

<div style="width: 50%">
    <h4>Rentals expiring today</h4>

    @if (ViewBag.ExpiringRentals != null && ((List<Rental>)ViewBag.ExpiringRentals).Count > 0)
    { 
    <table class="table table-striped">
    <thead>
            <tr>
                <th>Customer</th>
                <th>Rental Id</th>
            </tr>
    </thead>
    <tbody>
            @foreach (var rental in ViewBag.ExpiringRentals as IEnumerable<RetroVHSRental.Models.Rental>)
            {
                <tr>
                    <td>@rental.Customer.FirstName @rental.Customer.LastName</td>
                    <td>@rental.RentalId</td>
                    <td style="text-align:right">
                        <a asp-action="Details" asp-controller="Rental" asp-route-id="@rental.RentalId" class="btn btn-primary">Details</a>
                   </td>
                </tr>
        }
        
    </tbody> 
</table>
    }
    else
    {
        <p>No expiring rentals today.</p>
    }
</div>

   
   


<div class="row">
    <div class="col-sm-6 mb-3 mb-sm-0">
        <div class="card">
            <div class="card-body">
                <h5>Films</h5>
                <p class="card-text">List all films and choose your title.</p>
                <a asp-controller="Films" asp-action="Index" class="btn btn-outline-success">Go to films</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5>Customers</h5>
                <p class="card-text">List all customers.</p>
                <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-success">Go to customers</a>
            </div>
        </div>
    </div>
</div>
<br>
<div class="row">
    <div class="col-sm-6 mb-3 mb-sm-0">
        <div class="card">
            <div class="card-body">
                <h5>Rentals</h5>
                <p class="card-text">List all rentals.</p>
                <a asp-controller="Rental" asp-action="Index" class="btn btn-outline-success">Go to rentals</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5>Staff</h5>
                <p class="card-text">List all staff and add new.</p>
                <a asp-controller="Staff" asp-action="Index" class="btn btn-outline-success">Go to staff</a>
            </div>
        </div>
    </div>
</div>